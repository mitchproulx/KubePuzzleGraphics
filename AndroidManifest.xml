<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kube.kubepuzzletimer"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="23" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rubiks"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.HomeActivity"
            android:label="@string/home_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.TimerActivity"
            android:label="@string/timer_activity">
        </activity>

        <activity
            android:name=".presentation.HelpActivity"
            android:label="@string/help_activity">
        </activity>

        <activity
            android:name=".presentation.StatsActivity"
            android:label="@string/stats_activity">
        </activity>

        <activity
            android:name=".presentation.PreviewActivity"
            android:label="@string/preview_activity">
        </activity>


    </application>

</manifest>